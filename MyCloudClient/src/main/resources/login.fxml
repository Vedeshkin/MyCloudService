<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<VBox fx:id="globParent"
      alignment="center"
      xmlns="http://javafx.com/javafx/8.0.112-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.vedeshkin.cloud.client.controllers.LoginController">

    <TextField fx:id="login" maxWidth="200" promptText="Login">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin></TextField>
    <PasswordField fx:id="password" maxWidth="200" promptText="Password" />
    <Button onAction="#handleAuth" prefWidth="200" text="Authorization">
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin></Button>
</VBox>

