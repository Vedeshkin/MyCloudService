<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="globParent"
      alignment="center"
      xmlns="http://javafx.com/javafx/8.0.112-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.vedeshkin.cloud.client.controllers.LoginController">


    <TextField fx:id="loginField" maxWidth="200" promptText="Login">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="passwordField" maxWidth="200" promptText="Password"/>
    <Button onAction="#handleAuth" prefWidth="200" text="Authorization">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
</VBox>

